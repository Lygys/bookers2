<body>
  <main>
    <p class="green-text"><%= notice %></p>
    <div class="container px-5 px-sm-0">
      <div class="row">
        <%= render 'books/left', user: current_user %>
        <%= render 'books/right', books: @books %>
      </div>
              <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td><%= book.user_id %></td>
                　<td><%= book.title %></td>
                　<td><%= book.body %></td>
                　
                　<td><%= link_to "Show", book_path(book) %></td>
                  <td><%= link_to "Edit", edit_book_path(book) %></td>
                  <td><%= link_to "Destroy", book_path(book), method: :delete, data: {confirm: "Are you sure?"} %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
  </main>
</body>
