<body>
  <main>
    <p class="green-text"><%= notice %></p>
    <div class="container px-5 px-sm-0">
      <% if @book.errors.any? %>
        <div id="error_explanation">
          <% if @book.errors.count == 1 %>
            <h3><%= @book.errors.count %> error prohibited this book from being saved:</h3>
          <% else %>
            <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
          <% end %>
          <% @book.errors.full_messages.each do |message| %>
          <br><%= message %>
          <% end %>
        </div>
      <% end %>

      <div class="row">
        <%= render 'books/left', user: current_user %>

        <div class="col-md-8 offset-md-1">
          <% if @books.present? %>
            <h2>Books</h2>
            <table class="table table-hover table-inverse">
              <thead>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                <% @books.each do |book| %>
                <tr>
                  <td><%= book.user_id %></td>
                　<td><%= book.title %></td>
                　<td><%= book.body %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</body>